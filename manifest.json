{
  "manifest_version": 2,
  "name": "SteamOpen",
  "version": "1.1",
  "applications": {
    "gecko": {
      "strict_min_version": "55.0a1",
      "id": "Salut@salut.org"
    }
  },

  "description": "Add a contextual menu, to open steam app links directly in steam client",
    "icons": {
      "16": "icons/steam16.png",
      "32": "icons/steam32.png",
      "48": "icons/steam48.png"
  },

  "background": {
      "scripts": [
          "background.js"
      ]
  },

  "permissions": [
      "activeTab",
      "contextMenus"
  ]
}
